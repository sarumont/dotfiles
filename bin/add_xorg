#!/bin/sh

git submodule add git@github.com:sarumont/xfiles.git .xfiles || exit 1
ln -s .xfiles/Xdefaults .Xdefaults
ln -s .xfiles/gtk-bookmarks .gtk-bookmarks
ln -s .xfiles/gtkrc-1.2-gnome2 .gtkrc-1.2-gnome2
ln -s .xfiles/gtkrc-2.0 .gtkrc-2.0
ln -s .xfiles/icons .icons
ln -s .xfiles/fonts .fonts
ln -s .xfiles/themes .themes
ln -s .xfiles/xinitrc .xinitrc
ln -s .xfiles/xinitrc .xsession
ln -s .xfiles/xprofile .xprofile
ln -s .xfiles/xscreensaver .xscreensaver
mkdir .config
ln -s .xfiles/awesome .config/
ln -s .xfiles/redshift.conf .config/

echo ".xsession-errors*" >> .gitignore

git add .
git commit -m"add xorg"
