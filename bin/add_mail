#!/bin/sh

mkdir .offlineimap
ln -s .privfiles/mail/offlineimaprc .offlineimaprc
ln -s ../.dotfiles/mail/offlineimap.py .offlineimap/

mkdir .mutt
ln -s ../.dotfiles/mail/muttrc .mutt/
ln -s ../.dotfiles/mail/nuvos.rc .mutt/
ln -s ../.dotfiles/mail/sigil.rc .mutt/

ln -s .privfiles/mail/msmtprc .msmtprc

ln -s .dotfiles/mail/notmuch-config .notmuch-config

sudo apt-get install msmtp mutt-patched offlineimap syncevolution notmuch python-keyring w3m dillo libebook1.2-dev

echo "Set up your python keyring passwords using the python shell"
