#!/bin/sh

if test -d .svn; then
	echo `/usr/local/bin/svnversion`
else
	dir=`pwd`
	if test $# -gt 0; then
		cd $1
	fi
	base=`git svn info | grep "Last Changed Rev" | awk '{print $4}'`
	mod=`(git st | grep "modified:\|added:\|deleted:" -q) && echo "M"`
	if test $# -gt 0; then
		cd $dir
	fi
	echo $base$mod
fi
