#!/bin/sh

set +e

echo "--theme=OneHalfLight" > ~/.config/bat/config
echo "Net/ThemeName \"Arc\"" > ~/.xsettingsd.theme
echo "Net/IconThemeName \"Flat-Remix-Blue-Light\"" >> ~/.xsettingsd.theme
xrdb -merge ~/.Xresources.light
command cat $HOME/.config/termite/config.base $HOME/.config/termite/config.light > $HOME/.config/termite/config
killall -USR1 termite
reload_xsettings

sleep 1
which awesome-client &>/dev/null
if test $? -eq 0; then
    awesome-client 'awesome.restart()' &>/dev/null
fi
sleep 1
feh --no-fehbg --bg-fill ~/.config/awesome/themes/ephemeral/arch\ light.jpg
