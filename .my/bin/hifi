#!/bin/sh

PACTL=$(which pactl)
if test $? -ne 0; then
    PACTL=""
fi

mpc pause
if test "on" = $1; then
    if test -n "$PACTL"; then
        $PACTL suspend-sink 1
    fi
    mpc enable dac
    mpc disable pulse
else
    mpc enable pulse
    mpc disable dac
    if test -n "$PACTL"; then
        $PACTL suspend-sink 0
    fi
fi
mpc play
