#!/bin/sh

mpc pause
if test "on" = $1; then
    systemctl stop --user pipewire-pulse.service
    systemctl stop --user pipewire-pulse.socket
    mpc enable dac
    mpc disable alsa
else
    mpc enable alsa
    mpc disable dac
    systemctl start --user pipewire-pulse.service
    systemctl start --user pipewire-pulse.socket
fi
mpc play
