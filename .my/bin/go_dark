#!/bin/sh

set +e
mkdir -p ~/.config/local

echo "--theme=OneHalfDark" > ~/.config/bat/config

case $(uname) in
    Linux)
        echo "dark" > ~/.config/local/theme
        command cat $HOME/.config/termite/config.base $HOME/.config/termite/config.dark > $HOME/.config/termite/config
        killall -USR1 termite
        echo 'gtk-icon-theme-name = "Flat-Remix-Blue-Dark"' > ~/.gtkrc-2.0
        echo 'gtk-theme-name = "Arc-Dark"' >> ~/.gtkrc-2.0
        gsettings set org.gnome.desktop.interface gtk-theme "Arc-Dark"
        gsettings set org.gnome.desktop.interface icon-theme "Flat-Remix-Blue-Dark"
        ;;
    Darwin)
        echo "dark" > ~/.config/local/theme
        ;;
    *)
        echo "Really? $(uname)?"
        ;;
esac

