# Set up my keychain
KEYCHAIN=`which keychain`
if [[ $? == 0 ]]; then 
	if [[ -r ~/.ssh/id_dsa ]]; then
		$KEYCHAIN -q ~/.ssh/id_dsa
	fi
	if [[ -r ~/.ssh/id_rsa-rk-sigrun ]]; then
		$KEYCHAIN -q ~/.ssh/id_rsa-rk-sigrun
	fi
    [ -f ~/.keychain/`hostname`-sh ] && . ~/.keychain/`hostname`-sh
    [ -f ~/.keychain/`hostname`-sh-gpg ] && . ~/.keychain/`hostname`-sh-gpg
fi

# source machine-specific code
if [[ -r ~/.local/sh/zlogin ]]; then
    . ~/.local/sh/zlogin
fi
