typeset -U path

export EDITOR=`which vim`
export LS_COLORS='mi=37;41:'

# path prepend
path[1,0]=($HOME/.local/bin $HOME/.dotfiles/bin /opt/bin)

# path append
path+=(/sbin /usr/sbin $HOME/.rvm/bin)

[[ -s "$HOME/.rvm/scripts/rvm" ]] && source "$HOME/.rvm/scripts/rvm" # Load RVM into a shell session *as a function*

# source machine-specific code
if [[ -r ~/.local/sh/zshenv ]]; then
    . ~/.local/sh/zshenv
fi

# these will always be set in the local if they exist - and '.' is always at the end
path+=(
    $MAVEN_HOME/bin
    $GRADLE_HOME/bin
    $ANT_HOME/bin
    $ANDROID_HOME/platform-tools
    $ANDROID_HOME/tools
    $HEROKU_HOME/bin
    $HOME/.rvm/bin
    .)
path=($^path(N))
