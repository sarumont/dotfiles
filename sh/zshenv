typeset -U path

DEFAULT_USER=(sarumont richard)
export $DEFAULT_USER
export EDITOR=`which vim`
export LS_COLORS='mi=37;41:'

# path prepend
path[1,0]=($HOME/.local/bin $HOME/.dotfiles/bin /opt/bin)

# path append
path+=(/sbin /usr/sbin)

rvm() {
    [[ -s "$HOME/.rvm/scripts/rvm" ]] && unfunction rvm && . "$HOME/.rvm/scripts/rvm" && rvm $@ || echo "rvm not installed"
}

nvm() {
    [[ -s "$HOME/.nvm/nvm.sh" ]] && . "$HOME/.nvm/nvm.sh" && nvm $@ || echo "nvm not installed"
}

jenv() {
    if which jenv > /dev/null; then 
        unfunction jenv
        eval "$(jenv init -)"
        jenv $@
    else 
        echo "jenv not installed"
    fi
}


# source machine-specific code
if [[ -r ~/.local/sh/zshenv ]]; then
    . ~/.local/sh/zshenv
fi

# these will always be set in the local if they exist - and '.' is always at the end
path+=(
    $MAVEN_HOME/bin
    $GRADLE_HOME/bin
    $ANT_HOME/bin
    $ANDROID_HOME/platform-tools
    $ANDROID_HOME/tools
    $HEROKU_HOME/bin
    $HOME/.rvm/bin
    .)
path=($^path(N))
