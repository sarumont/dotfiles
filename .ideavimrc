let mapleader = ","

set surround
set easymotion

" Keymaps {{{
map <leader>cc :action CommentByLineComment<cr>

map <C-h> :action PrevSplitter<CR>
map <C-l> :action NextSplitter<CR>

map <leader>v :action Vcs.QuickListPopupAction<cr>

map gJ :action EditorJoinLines<cr>

" run configs
map <leader><leader>d :action Debug<CR>

" }}}

" Searching {{{
set nohlsearch
set incsearch
set ignorecase
set smartcase
" }}}

" Clipboard {{{
set clipboard+=unnamed
" }}}

" Stupid bell {{{
set visualbell
set noerrorbells
" }}}

" vim:foldmethod=marker:foldlevel=0
