[color]
	status = auto
	branch = auto
	diff = auto
	interactive = auto
[core]
	excludesfile = ~/gitignore
	autocrlf = input
[alias]
	st = status
	co = checkout
	up = !git fetch && git rebase --autostash FETCH_HEAD
	ci = commit
	pr = pull --rebase
[github]
	user = sarumont
[push]
	default = simple
[filter "media"]
	clean = git media clean %f
	smudge = git media smudge %f
	required = true
[filter "hawser"]
	clean = git hawser clean %f
	smudge = git hawser smudge %f
	required = true
[filter "lfs"]
	clean = git lfs clean %f
	smudge = git lfs smudge %f
	required = true
[commit]
	gpgSign = true
[tag]
	gpgSign = true
[init]
	defaultBranch = main
